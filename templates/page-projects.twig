{% extends "base.twig" %}{% block content %}{% if post.show_projects %}<section class="fadeInUp animated" id="projectshome"><div class="row">{% if post.page_title %}<h2 class="fadeIn animated">{{post.page_title}}</h2>{% endif %}</div><div data-equalizer="project" class="row medium-up-3">{% for project in projects %}<div data-equalizer-watch="project" class="column singleproject fadeInLeft animated"><a href="{{project.link}}" class="project"><div class="project-pic">{% if project.project_image %}<img src="{{TimberImage(project.project_image)|resize(300, 200) }}" />{% endif %}</div><figcaption><div class="small-middle"><div class="project-info">{% if project.company_name %}<h3>{{project.company_name}}</h3>{% endif %}{% if project.project_title %}<p>{{project.project_title}}</p>{% endif %}</div></div></figcaption></a></div>{% endfor %}</div><div class="row"><div class="medium-12 columns line"></div></div></section>{% endif %}{% endblock %}