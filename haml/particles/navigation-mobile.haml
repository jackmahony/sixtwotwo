  #mobile-container
    %ul#mobile-main.menu.mobile.vertical{data-accordion-menu: true}
      {% for item in topnav.get_items %}
        %li
          %a.link{href: "{% if item.get_children %}{% else %}{{item.url}}{% endif %}", class: "{{item.classes | join(' ')}}"}
            {{item.title}}
          {% if item.get_children %}
          %ul.menu.vertical.accordian
            {% for child in item.get_children %}
              %li
                %a{href: "{{child.get_link}}"} {{child.title}}
            {% endfor %}
          {% endif %}
      {% endfor %}

-# Scripts
{% block scripts %}
  :javascript
      $(function() {
        $("#hamburger").click(function () {
          $("#mobile-menu").toggleClass("fadeOut");
        });
        $(".close-menu").click(function () {
          $("#mobile-menu").toggleClass("fadeOut");
        });
      });
{% endblock %}
