{% extends "base.twig" %}

{% block content %}

-# About SixTwoTwo----------------------------------------------------------------------------------------------------------------
{% if post.studio_image %}
  %section#home-img.slideInUp.animated{style: "background: url('{{ TimberImage(post.studio_image)|resize(2000, 0) }}')center no-repeat;"}
      .medium-middle
        .row{data-equalizer: "text"}
          .medium-12.columns{data-equalizer-watch: "text"}
            {% if post.about_text %}
              %h3.fadeInUpBig.animated {{post.about_text}}
            {% endif %}
          .medium-12.columns
            {% if post.mission %}
              %p.fadeInUpBig.animated {{post.mission}}
            {% endif %}

{% endif %}


-# services list -------------------------------------------------------------------------------------------------------------------------
{% if post.service_icons %}
  %section#services.slideInUp.animated
    .row.hide-for-medium
      .small-12.columns
        %h2 Our services:
        %br

    .row.expanded{data-equalizer: "icons"}
      .medium-up-3{data-equalizer-watch: "icons"}

        {% for item in post.get_field('service_icons') %}
          .column
            .hov{id:"hov-{{item.icon.id}}", style: "background: url('{{ TimberImage(item.icon) }}')center no-repeat;"}

              .small-middle
                %img{src:"{{TimberImage(item.svg_icon)|resize(50, 50) }}"}

            .norm{id:"norm-{{item.icon.id}}"}
              %h2 {{item.title}}
              %p {{item.description}}

        {% endfor %}
{% endif %}

-# About Us section --------------------------------------------------------------------------------------------------------------------
{% if post.image_tim %}
  %section#us

    .row
      .small-12.columns.hide-for-medium
        {% if post.meet_the_team_title %}
          %h2 {{post.meet_the_team_title}}
        {% endif %}

    .row.tim{data-equalizer: "tim", data-equalize-on: "medium"}
      .medium-6.columns{data-equalizer-watch: "tim"}

        {% if post.image_tim %}
          %img{src: "{{TimberImage(post.image_tim).src}}"}
        {% endif %}

      .medium-6.columns{data-equalizer-watch: "tim"}
        .medium-middle
          %h2 Tim
          {% if post.tim_description %}
            %p {{post.tim_description}}
          {% endif %}

    .row.lui{data-equalizer: "luwi", data-equalize-on: "medium"}
      .medium-6.medium-push-6.columns{data-equalizer-watch: "luwi"}
        {% if post.image_lewi %}
          %img{src: "{{TimberImage(post.image_lewi).src}}"}
        {% endif %}

      .medium-6.medium-pull-6.columns.collapse{data-equalizer-watch: "luwi"}
        .medium-middle
          %h2 Lewis
          {% if post.lewi_description %}
            %p {{post.lewi_description}}
          {% endif %}

{% endif %}

-# Project Page -------------------------------------------------------------------------------------------
{% if post.show_projects %}
  %section#projectshome.bounceInLeft.animated
    .row
      %h2 Take a look at our Projects!

    .row.medium-up-3{data-equalizer: "project"}

      {% for project in projects %}

        .column.singleproject{data-equalizer-watch: "project"}
          %a.project{href: "{{project.link}}"}
            .project-pic
              {% if project.project_image %}
                %img{src: "{{TimberImage(project.project_image)|resize(300, 200) }}"}
              {% endif %}
            %figcaption
              .project-info
                {% if project.company_name %}
                  %h3 {{project.company_name}}
                    %hr
                {% endif %}
                {% if project.project_title %}
                  %p {{project.project_title}}
                {% endif %}
      {% endfor %}

{% endif %}

-# Contact Page---------------------------------------------------------------------------------------------------
{% if post.slug == 'contact' %}
  %section#contact-text.slideInUp.animated
    .row
      .medium-12.columns
        {% if post.contact_text %}
          %p {{post.contact_text}}
        {% endif %}

  %section#contact-form-map.slideInUp.animated
    .row{data-equalizer: "location", data-equalize-on: "medium"}
      .medium-7.columns{data-equalizer-watch: "location"}
        %h3 Send us an email
        {% filter shortcodes %}
          [contact-form-7 id="205" title="Contact Us"]
        {% endfilter %}
      .medium-4.medium-offset-1.columns{data-equalizer-watch: "location"}

        <iframe width="370" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3312.211967103466!2d151.20048591521052!3d-33.88419438065198!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b12ae26e8e082af%3A0x40ef80faa7aeeab9!2s822+George+St%2C+Chippendale+NSW+2008!5e0!3m2!1sen!2sau!4v1481512433846&key=AIzaSyD45ubf_BlbU-828R6GD5QSlYcn0i5OjsU" allowfullscreen></iframe>
        %locations
          %h3 Contact Us
          {% for location in options.business_location %}
              %strong {{location.location}}
              {{location.location_address.address}}
          {% endfor %}
            .contact-deets
              {% if options.contact_number %}
                %p Contact: {{options.contact_email}}
              {% endif %}
              {% if options.contact_number %}
                %p Email: {{options.contact_email}}
              {% endif %}
{% endif %}

{% endblock %}

{% block scripts %}

  {% for item in post.get_field('service_icons') %}

    :javascript
      $(function() {
        $("#hov-{{item.icon.id}}").hover(function(){
          $("#norm-{{item.icon.id}}").toggleClass("hover");
        });
      });

  {% endfor %}

{% endblock %}
