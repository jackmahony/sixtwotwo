!!!
%html

  %head

    -# [if lt IE 7] <html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" >
    -# [if IE 7] <html class="no-js ie ie7 lt-ie9 lt-ie8" >
    -# [if IE 8] <html class="no-js ie ie8 lt-ie9" >
    -# [if gt IE 8]><!
    -# <![endif]>

    %meta{charset: "{{site.charset}}"}
    %title
      {% if wp_title %}
      {{ wp_title }} - {{ site.name }}
      {% else %}
      {{ site.name }}
      {% endif %}

    %meta{content: "{{ site.name }}", name: "description"}
    %meta{content: "text/html; charset=UTF-8", http-equiv: "Content-Type"}
    %meta{content: "IE=edge,chrome=1", http-equiv: "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %link{href: "", rel: "pingback"}

    {{function('wp_head')}}

    -# Head Block
    {% block head %}
    {% endblock %}

    -# CSS
    %link{href: "{{theme.link}}/assets/stylesheets/core.css", media: "screen", rel: "stylesheet", type: "text/css"}
    %link{href: "{{theme.link}}/bower_components/animate.css", media: "screen", rel: "stylesheet", type: "text/css"}
  %body{class: "{{body_class}}", data-template: "base.twig"}

    {% include 'particles/navigation.twig' %}
    {% include 'particles/navigation-mobile.twig' %}
    -# Page Content
    {% block content %}
      Sorry, no content
    {% endblock %}

    -# Footer
    {% block footer %}
      {% if post.show_footer %}

        %footer#footer

          .row{data-equalizer: "footer"}
            .small-12.medium-8.columns{data-equalizer-watch: "footer"}

              %a.nav-logo{href: "{{site.url}}"}
                %img.footer-logo{src: "{{theme.link}}/assets/img/logo-sixtwotwo-white.svg"}
              {% if options.contact_number %}
                %span Contact: {{options.contact_email}}
              {% endif %}
              {% if options.contact_number %}
                %span Email: {{options.contact_email}}
              {% endif %}

            .small-12.medium-4.columns{data-equalizer-watch: "footer"}
              .social-icons

                %a.nav-logo{href: "https://www.facebook.com/"}
                  %img{src: "{{theme.link}}/assets/img/facebook-logo-button.svg"}
                %a.nav-logo{href: "https://www.instagram.com/?hl=en"}
                  %img{src: "{{theme.link}}/assets/img/instagram-logo.svg"}
                %a.nav-logo{href: "https://soundcloud.com/stream"}
                  %img{src: "{{theme.link}}/assets/img/soundcloud-logo.svg"}
      {% endif %}
    {% endblock %}

      -# Scripts
      %scripts
        -# Foundation
        %script{src: "{{theme.link}}/bower_components/foundation-sites/dist/js/foundation.min.js"}
        :javascript
          $(document).foundation();

      {% block scripts %}

      {% endblock %}
